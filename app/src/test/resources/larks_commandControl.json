{
    "title": "larks command control",
    "description": "for the terminal",
    "rules": [
        {
            "description": "Control b (left_command+b to right_control+b)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "b",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "b",
                            "modifiers": [
                                "right_control"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Control u (left_command+u to right_control+u)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
