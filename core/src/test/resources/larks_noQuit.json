{
    "title": "larks no quit",
    "rules": [
        {
            "description": "left click (q+left_command to left click)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "left_command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "pointing_button": "button1"
                        }
                    ]
                }
            ]
        },
        {
            "description": "quit (q+left_command+left_shift q+left_command)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "q",
                        "modifiers": {
                            "mandatory": [
                                "left_command",
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "quit (f4+left_option q+left_command)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "f4",
                        "modifiers": {
                            "mandatory": [
                                "left_option"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "q",
                            "modifiers": [
                                "left_command"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "middle click (v+fn to middle click)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "v",
                        "modifiers": {
                            "mandatory": [
                                "fn"
                            ]
                        }
                    },
                    "to": [
                        {
                            "pointing_button": "button3"
                        }
                    ]
                }
            ]
        }
    ]
}