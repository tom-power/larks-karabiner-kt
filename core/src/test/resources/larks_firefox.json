{
    "title": "larks firefox",
    "rules": [
        {
            "description": "left command left click firefox (button1 + left_command)",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "pointing_button": "button1",
                        "modifiers": {
                            "mandatory": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "modifiers": [
                                "left_command"
                            ],
                            "pointing_button": "button1"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "frontmost_application_if",
                            "bundle_identifiers": [
                                "^org\\.mozilla\\.firefox$"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}